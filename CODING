package QUIZ;

public class labtest {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

	      System.out.println(CheckOddEven(0));  
	      System.out.println(CheckOddEven(1)); 
	      System.out.println(CheckOddEven(88));
	      System.out.println(CheckOddEven(99));
	      System.out.println(CheckOddEven(-1));
	      System.out.println(CheckOddEven(-2));
	      System.out.println ("bye!");
	   }
		
		
	public static boolean CheckOddEven (int number) {
		
			if (number % 2 == 1) {
				
				System.out.println  ("Odd Number");
				return true;
			} 
			else {
				System.out.println  ("Even Number");
				return false;
			}
		
	   }
	}
